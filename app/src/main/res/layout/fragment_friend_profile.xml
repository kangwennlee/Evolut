<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kangw.evolut.fragment.FriendProfile"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/friendProfilePic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtFriendProfileName"
        android:text="Name : "
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtFriendProfileEmail"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:text="Email : "
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtFriendContactNo"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:text="Contact No. : "
        android:textSize="20sp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="20dp">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Friend"
        android:id="@+id/btnRemoveFriend"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/btnFriendProfileBack"
        android:layout_marginStart="20dp"/>

</LinearLayout>

</LinearLayout>
