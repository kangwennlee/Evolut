<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kangw.evolut.fragment.FriendProfile"
    android:orientation="vertical">


    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="90dp"
        android:layout_marginVertical="40dp"
        android:id="@+id/friendProfilePic"
        android:src="@drawable/com_facebook_profile_picture_blank_square"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtFriendProfileName"
        android:text="Name : "
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtFriendProfileEmail"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:text="Email : "
        android:textSize="20sp"
        android:layout_below="@+id/txtFriendProfileName"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtFriendContactNo"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:text="Contact No. : "
        android:textSize="20sp"
        android:layout_below="@+id/txtFriendProfileEmail"/>
</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/btnFriendProfileBack"
        android:layout_marginHorizontal="50dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Friend"
        android:id="@+id/btnRemoveFriend"
        android:layout_toRightOf="@+id/btnFriendProfileBack"
        android:layout_marginHorizontal="20dp"/>

</RelativeLayout>

</LinearLayout>
